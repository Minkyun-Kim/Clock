<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/itemAlarm"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alarm_item_height"
    android:layout_marginBottom="@dimen/alarm_item_margin_bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hour"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:textSize="13sp"
        tools:text="title" />

    <TextView
        android:id="@+id/twelve_hour_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hour"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="5dp"
        android:text="오전"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/twelve_hour_clock"
        android:text="7"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/hour"
        android:layout_marginStart="5dp"
        android:text=":"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/colon"
        android:text="00"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/alarm_switch"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/alarm_switch"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textSize="@dimen/day_of_the_week_text_size" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화"
            android:textSize="@dimen/day_of_the_week_text_size" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수"
            android:textColor="@color/primary"
            android:textSize="@dimen/day_of_the_week_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목"
            android:textColor="@color/primary"
            android:textSize="@dimen/day_of_the_week_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금"
            android:textColor="@color/primary"
            android:textSize="@dimen/day_of_the_week_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토"
            android:textSize="@dimen/day_of_the_week_text_size" />

        <TextView
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="@dimen/day_of_the_week_text_size" />
    </LinearLayout>

    <Switch
        android:id="@+id/alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="26dp"
        android:checked="true" />
</RelativeLayout>